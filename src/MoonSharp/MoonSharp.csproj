  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MoonSharp.Hardwire\Moonsharp.Hardwire.csproj" />
    <ProjectReference Include="..\MoonSharp.Interpreter\MoonSharp.Interpreter.csproj" />
